#!/bin/sh

## Little script to open a directory of images in sxiv in random order
## Usage: `wp [ wallpapers_subdir ] [ number of images ]`

main() {
	local subdir=$1
	local rootdir=~/pics/papes
	[ -n "$2" ] && count="-n $2"
	fd -e png -e jpg -e jpeg -e gifv -e gif -e webp -e tif -e bmp -e ico --search-path $rootdir/$subdir -t f | shuf $count | sxiv -ba -
}

main $@
