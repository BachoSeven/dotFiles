#!/bin/sh

# A dmenu wrapper script for system functions.

# For non-systemd init systems.
case "$(realpath /sbin/init)" in
	*runit*) hib="sudo -A zzz" ;;
	*openrc*) reb="sudo -A openrc-shutdown -r"; shut="sudo -A openrc-shutdown -p" ;;
esac

cmds="\
ðŸ”’ lock		slock
âœ¨ renew	kill -HUP $(pidof -s dwm)
ðŸšª leave	kill -TERM $(pidof -s dwm)
ðŸ’¤ sleep	${hib:-sudo -A systemctl suspend}
ðŸ”ƒ reboot	${reb:-sudo -A reboot}
ðŸ–¥ shutdown	${shut:-sudo -A shutdown -h now}"

choice="$(echo "$cmds" | cut -d'	' -f 1 | dmenu -c -l 6)" || exit 1

## https://github.com/koalaman/shellcheck/wiki/SC2091
readonly action="$(echo "$cmds" | grep "^$choice	" | cut -d '	' -f2-)"
$action
