#!/bin/sh

# Exit if transmission is not running
pgrep transmission-da > /dev/null 2>&1 && exit 1

transmission-remote -l | grep % |
	sed " # The letters are for sorting and will not appear.
	s/.*Stopped.*/A 🛑/;
	s/.*Seeding.*/Z 🌱/;
	s/.*100%.*/N ☑/;
	s/.*Idle.*/B 💤/;
	s/.*Uploading.*/L /;
	s/.*%.*/M /" |
		sort -h | uniq -c | awk '{print $3 $1}' | paste -sd ' '

case $BLOCK_BUTTON in
	1) setsid "$TERMINAL" -e stig & ;;
	2) td-toggle ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac
