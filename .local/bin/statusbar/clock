#!/bin/sh

# Refresh clock at exactly 0 seconds
refresh(){
    pidof -o %PPID -x $0 > /dev/null 2>&1 && exit 1 # exit if already running
    sleep $((60-$(date "+%S")))
    kill -35 $(pidof dwmblocks) # Reminder: +34
}
case $BLOCK_BUTTON in
	1) notify-send "Questo mese" "$(cal --color=always | sed "s/..7m/<b><span color=\"#cc241d\">/;s/..27m/<\/span><\/b>/")"  ;;
	6) "$TERMINAL" -e "$EDITOR" "$0" ;;
esac

date "+%a %d %b %R"
refresh &
