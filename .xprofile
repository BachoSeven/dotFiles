#!/bin/sh

# Fix Gnome Apps Slow  Start due to failing services
dbus-update-activation-environment --verbose --systemd DBUS_SESSION_BUS_ADDRESS DISPLAY XAUTHORITY

sxhkd &				# Simple X Hotkey Daemon
mpd & 				# start MPD as user when you log in
setbg &				# basically xwallpaper+bling
unclutter &			# remove mouse when idle
xrdb -load $XDG_CONFIG_HOME/Xresources/Xresources &
xcompmgr &			# xcompmgr for transparency
xset r rate 300 50 &		# Speed xrate up
xscreensaver &			# screensaver
redshift-gtk &			# color temperature adjustment
/usr/bin/copyq &		# A cut & paste history utility
